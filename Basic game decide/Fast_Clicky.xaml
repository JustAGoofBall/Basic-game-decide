<Window x:Class="Basic_game_decide.Fast_Clicky"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basic_game_decide"
        mc:Ignorable="d"
        Title="Fast_Clicky" Height="450" Width="800">
    <Grid>
        <Viewbox Height="150" Width="300">
            <Button x:Name="clickButton" Content="Click Me!" HorizontalAlignment="Center" VerticalAlignment="Center" Click="clickButton_Click"/>
        </Viewbox>
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Top" Height="150">
            <Label x:Name="timerLabel" Content="Time Remaining: 10" />
        </Viewbox>
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="100">
            <Label x:Name="scoreLabel" Content="Score: 0"/>
        </Viewbox>
    </Grid>
</Window>
